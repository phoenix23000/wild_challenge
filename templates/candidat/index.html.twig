{% extends 'base.html.twig' %}

{% block stylesheetssox %} <link rel="stylesheet" href="/dist/css/agro.css"> {% endblock %}
{% block title %}Argonautes{% endblock %}

{% block body %}

    <header>
        <h1>
          <img src="https://www.wildcodeschool.com/assets/logo_main-e4f3f744c8e717f1b7df3858dce55a86c63d4766d5d9a7f454250145f097c2fe.png" alt="Wild Code School logo" />
          Les Argonautes
        </h1>
      </header>
       

<h2>Ajouter un(e) Argonaute</h2>
<div class="container">
{{ form_start(formCandidat) }}
            
{{ form_widget(formCandidat) }}

<button type="submit" class="btn btn-success">Enregistrer</button>
{{ form_end(formCandidat) }}

  
  <!-- Member list -->
  <h2 style="color: rgb(85, 85, 255);">Membres de l'équipage</h2>
  
  <section class="row">
    {% for candidat in candidats %}
                <div class="col-3 mr-4 mb-4 pt-3" style="background:white;">
                    <p>{{candidat.name}} &nbsp{{candidat.age}} &nbsp{{candidat.country}}&nbsp&nbsp<a href="{{ path('delete', {'id':candidat.id})}}">Supprimer</a></p>
                </div>
            {% endfor %}
  </section>
</main>
</div>
<footer>
  <p>Réalisé par Jason en Anthestérion de l'an 515 avant JC</p>
</footer>

{% endblock %}
